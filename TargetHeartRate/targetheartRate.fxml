<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="8.0" prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: grey;" vgap="8.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TargetHeartRate.THRController">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <padding>
        <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
    </padding>
    <Label fx:id="ageLabel" text="Age" />
    <Label fx:id="maximumLabel" text="Maximum Heart Rate" GridPane.rowIndex="1" />
    <Label fx:id="targetHeartLabel" text="Target Heart Rate" GridPane.rowIndex="2" />
    <Button fx:id="calcButton" blendMode="DARKEN" contentDisplay="CENTER" mnemonicParsing="false" onAction="#OnClick" style="-fx-background-color: teal;" text="Calculate" textAlignment="CENTER" textFill="#0a0a0a" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <TextField fx:id="ageTextField" promptText="Enter Age" GridPane.columnIndex="1" />
    <TextField fx:id="maximumTextField" focusTraversable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <TextField fx:id="targetTextField" focusTraversable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
</GridPane>
